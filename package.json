{
  "name": "next-todo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14.8.0"
  },
  "scripts": {
    "preinstall": "npx check-engines && npx only-allow yarn",
    "start": "run-s next-dev",
    "build": "run-s next-build next-start",
    "serve": "run-s export server",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore .",
    "export": "run-s next-build next-export",
    "next-dev": "next dev",
    "next-build": "next build",
    "next-start": "next start",
    "next-export": "next export",
    "server": "browser-sync start --config ./bs-config.js",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "next": "10.0.4",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@types/autoprefixer": "^9.7.2",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "autoprefixer": "^10.1.0",
    "browser-sync": "^2.26.13",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^5.0.6",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --cache . --fix"
  }
}
